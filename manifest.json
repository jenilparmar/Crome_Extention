{
  "manifest_version": 3,
  "name": "Image Paste Extension",
  "version": "1.0",
  "permissions": ["clipboardRead", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "paste_image": {
      "suggested_key": {
        "default": "Ctrl+V"
      },
      "active": {
        "suggested_key": {
          "default": "Ctrl+Shift+X"
        }
      },
      "description": "Paste last copied image"
    }
  }
}
